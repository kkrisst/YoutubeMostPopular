<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="n358vu.krisa.youtubemostpopular">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".YoutubeMostPopularApplication">

        <meta-data android:name="DATABASE" android:value="sugar_example.db" />
        <meta-data android:name="VERSION" android:value="2" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.example" />

        <activity
            android:name=".screen.VideoListActivity"
            android:label="@string/app_name">
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".screen.CategoriesActivity"
            android:label="@string/categories_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".screen.FavoritesActivity"
            android:label="@string/favorites_title"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".screen.AboutActivity"
            android:label="@string/about_title"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="10dd22557b52157ada57d382e0d7818460949732" />
    </application>

</manifest>
